package com.formation.parking.controllers;

import java.util.ArrayList;
import java.util.List;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import com.formation.parking.model.Parking;

@RestController
public class ParkingController {

@RequestMapping(path="/api/parkings", method = RequestMethod.GET)
public List<Parking> getListeParking(){
	
	Parking parkingTest = new Parking();
	parkingTest.setNom("Geant");
	parkingTest.setStatut("Libre");
	parkingTest.setNbrPlacesTotal(100);
	parkingTest.setNbrPlacesDispo(30);
	parkingTest.setHeureMaj("12h30");
	List l =new List();
	l.add(parkingTest);
	return l;
	
	

}

}
